<h1 class="text-center mt-4">Bugs</h1>

<div class="container">
  <% @bugs.each do |bug| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to bug.title, project_bug_path(bug.project_id, bug), class: "text-success" %></h5>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(bug.created_at) %> ago, 
            edited <%= time_ago_in_words(bug.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
