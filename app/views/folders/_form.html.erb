<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @folder %>
      <%= form_with(model: @folder, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group mb-2 row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the name of Folder" %>
          </div>
        </div>
        
        <div class="form-group mb-2 row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded ", placeholder: "Enter the description of Folder" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Return to Folders Listing Page ]', folders_path, class: "text-info text-center" %>
  </div>

</div>
</br></br>
<%= link_to 'Go to Home Page', root_path, class: "text-danger" %>