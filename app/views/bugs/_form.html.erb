<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @bug %>
      <%= form_with(model: [@project, @bug], class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        
        <div class="form-group row">
          <%= f.label :title, "Bug title", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded mb-4", placeholder: "Enter bug's title" %>
          </div>
        </div>
        </br>

        <div class="form-group row">
          <%= f.label :title, "Bug description", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, class: "form-control shadow rounded mb-4", placeholder: "Enter bug's description" %>
          </div>
        </div>
        </br>


        <div class="form-group row">
          <%= f.label :title, "Bug type", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.select :bug_type, Bug.bug_types.keys, { prompt: "Select bug type (Click Me)" } , class: "custom-select form-control shadow rounded mb-4" %>
          </div>
        </div>
        </br>


        <div class="form-group row">
          <%= f.label :title, "Bug status", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.select :status, Bug.statuses.keys, { prompt: "Select bug status (Click Me)" } , class: "custom-select form-control shadow rounded mb-4" %>
          </div>
        </div>
        </br>


        <div class="form-group mb-2 row">
          <%= f.label 'Developers who will solve this bug:', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select :user_ids, User.where(user_type: 'developer'), :id, :username, {}, { multiple: true, id: 'category-select', class: "dropdown" } %>
          </div>
        </div>
        </br>
   
          <div class="form-group row">
            <%= f.label :images, 'Upload Images' %>
            <%= f.file_field :images, multiple: true %>
          </div>
        
        <div class="form-group row">
          <%= f.label :title, "Deadline", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_field :deadline, class: "form-control shadow rounded mb-4", placeholder: "Enter deadline date" %>
          </div>
        </div>
        </br>


        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to projects listing ]', projects_path, class: "text-primary" %>
    </div>
  </div>
</div>

</br></br>
<%= link_to 'Go to Home Page', root_path, class: "text-danger" %>