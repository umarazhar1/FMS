<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @project %>
      <%= form_with(model: @project, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group mb-2 row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of project" %>
          </div>
        </div>
        
        <div class="form-group mb-2 row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded ", placeholder: "Description of project" %>
          </div>
        </div>

        <div class="form-group mb-2 row">
          <%= f.label :developers, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select :user_ids, User.where(user_type: 'developer'), :id, :username, {}, { multiple: true, id: 'category-select', class: "dropdown" } %>
          </div>
        </div>

        <div class="form-group mb-2 row">
          <%= f.label :qas, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select :user_ids, User.where(user_type: 'qa'), :id, :username, {}, { multiple: true, id: 'category-select', class: "form-control shadow rounded" } %>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Return to Projects Listing Page ]', projects_path, class: "text-info text-center" %>
  </div>

</div>
</br></br>
<%= link_to 'Go to Home Page', root_path, class: "text-danger" %>